{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "sourceMap": true,
      "typeRoots": ["./node_modules/@types"],
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "build",
      "rootDir": "app"
    },
    "include": [
        "app/*"
    ],
    "exclude": [
        "node_modules"
    ]
